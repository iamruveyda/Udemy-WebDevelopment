@model List<OrderListModel>

<h1>Siparişlerim</h1>
<hr>

@foreach (var order in Model)
{
    <table class="table table-bordered table-sm mb-3">
        <thead class="bg-light">
            <tr>
                <td colspan="2">Şipariş Numarası: #@order.OrderNumber</td>
                <th>Fiyat</th>
                <th>Adet Sayısı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
                <tr>
                    <td><img src="~/img/@orderItem.ImageUrl" alt="" width="50"></td>
                    <td>
                        @orderItem.Name
                    </td>
                    <td>@orderItem.Price</td>
                    <td>@orderItem.Quantity</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">Müşteri Adı Soyadı</td>
                <td>@order.FirstName @order.LastName</td>
                <td rowspan="6">Toplam Fiyat: @order.TotalPrice().ToString("c")</td>
            </tr>
            <tr>
                <td colspan="2">Adres: </td>
                <td>@order.Address</td>
            </tr>
            <tr>
                <td colspan="2">E-Posta Adresi: </td>
                <td>@order.Email</td>
            </tr>
            <tr>
                <td colspan="2">Telefon Numarası: </td>
                <td>@order.Phone</td>
            </tr>
            <tr>
                <td colspan="2">Sipariş Durumu: </td>
                <td>@order.OrderState</td>
            </tr>
            <tr>
                <td colspan="2">Ödeme Türü: </td>
                <td>@order.PaymentType</td>
            </tr>
        </tfoot>
    </table>
}
