@model OrderModel

<h1>Ödeme İşlemleri</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayı</h4>
        <form method="POST" asp-controller="Cart" asp-action="Checkout">
            <input type="hidden" name="cartId" value="0">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName">Adı</label>
                    <input asp-for="@Model.FirstName" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName">Soyadı</label>
                    <input asp-for="@Model.LastName" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address">Adresi</label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.City">Şehir</label>
                    <input asp-for="@Model.City" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Phone">Telefon</label>
                    <input asp-for="@Model.Phone" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Email">E-Posta Adresi</label>
                    <input asp-for="@Model.Email" class="form-control">
                </div>
            </div>
            <h4 class="mb-3">Kart Bilgileri</h4>
            <hr class="mb-3">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardName">Ad Soyad</label>
                    <input asp-for="@Model.CardName" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CardNumber">Kart No</label>
                    <input asp-for="@Model.CardNumber" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth">Ay</label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear">Yıl</label>
                    <input asp-for="@Model.ExpirationYear" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Cvc">CVC</label>
                    <input asp-for="@Model.Cvc" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Öde</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Sepet Bilgisi</span>
        </h4>
        <ul class="list-group mb-3">

            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Name</h6>
                    </div>
                    <span class="text-muted">@item.Price.ToString("c")</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam (TL)</span>
                <strong>@Model.CartModel.TotalPrice().ToString("c")</strong>
            </li>
        </ul>

    </div>
</div>